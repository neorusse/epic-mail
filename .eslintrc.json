{
  "root": true,
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:import/errors",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "quotes": "off",
    "no-console": 0,
    "comma-dangle": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "curly": ["error", "multi-line"],
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": ["static"]
      }
    ],
    "new-cap": [
      "error",
      {
        "properties": false
      },
      {
        "newIsCap": false
      }
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  }
}
