{
  "name": "server",
  "version": "1.0.0",
  "description": "A web app that helps people exchange messages/information over the internet",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc --require @babel/register --reporter=html --reporter=text mocha --timeout 10000 server/tests/**/*spec.js --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "start": "babel-node ./server/bin/www",
    "start:prod": "node ./dist/bin/www",
    "dev": "npm-run-all start",
    "clean": "rimraf ./dist",
    "build": "babel ./server --out-dir dist",
    "prod": "npm-run-all clean build start:prod",
    "watch": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neorusse/epic-mail.git"
  },
  "keywords": [
    "Node.js",
    "Express",
    "RESTFul-API",
    "Mocha"
  ],
  "author": "Russell Nyorere",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neorusse/epic-mail/issues"
  },
  "homepage": "https://github.com/neorusse/epic-mail/#readme",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "supertest": "^3.4.2"
  }
}
