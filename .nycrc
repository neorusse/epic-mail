{
  "check-coverage": false,
  "per-file": false,
  "lines": 10,
  "statements": 10,
  "functions": 10,
  "branches": 50,
  "reporter": [
    "lcov"
  ],
  "require": [
    "@babel/register"
  ],

  "sourceMap": false,
  "instrument": false,
  "cache": true,
  "report-dir": "./coverage",

  "include": [
    "server/**/*.js"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/coverage/**",
    "**/UI/**",
    "**/.nyc_output/**",
    "**/server/tests/**",
  ]
}
